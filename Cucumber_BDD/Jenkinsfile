pipeline {
    agent any

    environment {
        JAVA_HOME = "C:\\Program Files\\Java\\jdk-21"
        M2_HOME = "C:\\apache-maven-3.9.11-bin\\apache-maven-3.9.11"
        PATH = "${env.M2_HOME}\\bin;${env.JAVA_HOME}\\bin;${env.PATH}"
    }

    triggers {
        // Run every day at 7 AM (change as per your requirement)
        cron('0 7 * * *')
    }
    
    stages {
        stage('Checkout') {
            steps {
                // Checkout your GitHub repo
                checkout scm
            }
        }
        
        stage('Build Project') {
            steps {
                dir('Cucumber_BDD') {
                    // Use PowerShell instead of bat
                    powershell 'mvn clean install -DskipTests=true'
                }
            }
        }
        
        stage('Run Cucumber Tests') {
            steps {
                dir('Cucumber_BDD') {
                    powershell 'mvn test'
                }
            }
        }
        
        stage('Test Reports') {
            steps {
                dir('Cucumber_BDD') {
                    junit 'target/surefire-reports/*.xml'
                    archiveArtifacts 'target/*.jar'
                }
            }
        }
    }
    
    post {
        always {
            echo 'Pipeline execution completed'
            cleanWs() // Clean workspace after build
        }
        success {
            echo '✅ Cucumber BDD pipeline finished successfully!'
        }
        failure {
            echo '❌ Pipeline failed! Check the logs for details.'
        }
        unstable {
            echo '⚠️  Pipeline marked as unstable'
        }
    }
}
