pipeline {
    agent any

    tools {
        jdk 'jdk21'
        maven 'M3'
    }

    triggers {
        cron('39 21 * * *')  // 9:30 PM every day
    }
    
    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Jayadeep09/Wipro_Projects.git'
            }
        }
        
        stage('Build and Test') {
            steps {
                dir('Cucumber_BDD') {
                    bat 'mvn clean test'  // Combined clean and test
                }
            }
        }
        
        stage('Verify Results') {
            steps {
                dir('Cucumber_BDD') {
                    // Basic verification without JUnit reports
                    bat 'if exist target\\surefire-reports (echo Tests completed) else (exit 1)'
                    echo 'Tests executed - check console for details'
                }
            }
        }
    }
    
    post {
        always {
            echo 'Pipeline execution completed'
        }
        success {
            echo '✅ Cucumber BDD pipeline finished successfully!'
        }
        failure {
            echo '❌ Pipeline failed! Check the logs for details.'
        }
    }
}
