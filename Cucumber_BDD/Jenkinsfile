pipeline {
    agent any

    tools {
        jdk 'jdk21'
        maven 'M3'
    }

    triggers {
        cron('55 21 * * *')  // 9:30 PM every day
    }
    
    stages {
        stage('Checkout Code') {
            steps {
                powershell '''
                    # Clean and clone your repository
                    Remove-Item * -Force -Recurse -ErrorAction SilentlyContinue
                    git clone https://github.com/Jayadeep09/Wipro_Projects.git .
                    git checkout main
                    Write-Host "✅ Repository cloned successfully!"
                '''
            }
        }
        
        stage('Build and Test') {
            steps {
                dir('Cucumber_BDD') {
                    powershell 'mvn clean test'
                }
            }
            
            post {
                success {
                    dir('Cucumber_BDD') {
                        // Try to publish test results if JUnit plugin is available
                        script {
                            try {
                                junit 'target/surefire-reports/TEST-*.xml'
                            } catch (Exception e) {
                                echo "JUnit reporting not available: ${e}"
                            }
                        }
                    }
                }
            }
        }
    }
    
    post {
        always {
            echo 'Pipeline execution completed'
        }
        success {
            echo '✅ Cucumber BDD pipeline finished successfully!'
        }
        failure {
            echo '❌ Pipeline failed! Check the logs for details.'
        }
    }
}
