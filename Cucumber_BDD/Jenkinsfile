pipeline {
    agent any

    tools {
        jdk 'jkk21'      // Matches your JDK configuration name
        maven 'M3'       // Matches your Maven configuration name
    }

    triggers {
        cron('30 21 * * *')  // 9:30 PM every day
    }
    
    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Jayadeep09/Wipro_Projects.git'
            }
        }
        
        stage('Build Project') {
            steps {
                dir('Cucumber_BDD') {
                    bat 'mvn clean install -DskipTests=true'
                }
            }
        }
        
        stage('Run Tests') {
            steps {
                dir('Cucumber_BDD') {
                    bat 'mvn test'
                }
            }
        }
        
        stage('Test Reports') {
            steps {
                dir('Cucumber_BDD') {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
    }
    
    post {
        always {
            echo 'Pipeline execution completed'
            cleanWs()  // Clean workspace after build
        }
        success {
            echo '✅ Cucumber BDD pipeline finished successfully!'
        }
        failure {
            echo '❌ Pipeline failed! Check the logs for details.'
        }
    }
}
