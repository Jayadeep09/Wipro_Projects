pipeline {
    agent any

    environment {
        MVN_CMD = "C:\\apache-maven-3.9.11-bin\\apache-maven-3.9.11\\bin\\mvn.cmd"
        JAVA_HOME = "C:\\Program Files\\Java\\jdk-21"
        PATH = "${env.JAVA_HOME}\\bin;${env.PATH}"
    }

    triggers {
        // Run every day at 7 AM (change as per your requirement)
        cron('0 7 * * *')
    }
    
    stages {
        stage('Checkout') {
            steps {
                // Checkout your GitHub repo
                checkout scm
            }
        }
        
        stage('Build Project') {
            steps {
                dir('Cucumber_BDD') {
                    // Use bat with full path to mvn.cmd
                    bat "\"${env.MVN_CMD}\" clean install -DskipTests=true"
                }
            }
        }
        
        stage('Run Cucumber Tests') {
            steps {
                dir('Cucumber_BDD') {
                    bat "\"${env.MVN_CMD}\" test"
                }
            }
        }
        
        stage('Test Reports') {
            steps {
                dir('Cucumber_BDD') {
                    junit 'target/surefire-reports/*.xml'
                    archiveArtifacts 'target/*.jar'
                }
            }
        }
    }
    
    post {
        always {
            echo 'Pipeline execution completed'
            cleanWs()
        }
        success {
            echo '✅ Cucumber BDD pipeline finished successfully!'
        }
        failure {
            echo '❌ Pipeline failed! Check the logs for details.'
        }
        unstable {
            echo '⚠️  Pipeline marked as unstable'
        }
    }
}
