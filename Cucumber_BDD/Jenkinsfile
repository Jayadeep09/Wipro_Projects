pipeline {
    agent any
    
    environment {
        MVN_HOME = tool 'M3'
        PATH = "${env.MVN_HOME}/bin:${env.PATH}"
    }

    triggers {
        // Run every day at 7 AM (change as per your requirement)
        cron('0 7 * * *')
    }
    
    stages {
        stage('Checkout') {
            steps {
                // Checkout your GitHub repo
                git branch: 'main', url: 'https://github.com/Jayadeep09/Wipro_Projects.git'
            }
        }
        
        stage('Build Project') {
            steps {
                dir('Cucumber_BDD') {
                    bat 'mvn clean install -DskipTests=true'
                }
            }
        }
        
        stage('Run Cucumber Tests') {
            steps {
                dir('Cucumber_BDD') {
                    bat 'mvn test'
                }
            }
        }
    }
    
    post {
        success {
            echo 'üìÖ Cucumber BDD pipeline finished successfully!'
        }
        always {
            junit 'Cucumber_BDD/target/surefire-reports/*.xml'
        }
        failure {
            echo '‚ùå Pipeline failed! Check the logs for details.'
        }
    }
}
