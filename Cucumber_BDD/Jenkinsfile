pipeline {
    agent any

    tools {
        jdk 'jkk21'
        maven 'M3'
    }

    triggers {
        cron('45 21 * * *')  // 9:30 PM every day
    }
    
    stages {
        stage('Checkout Code') {
            steps {
                // Use direct git path to avoid Jenkins configuration issues
                bat '"C:\\Program Files\\Git\\bin\\git.exe" clone https://github.com/Jayadeep09/Wipro_Projects.git .'
                bat '"C:\\Program Files\\Git\\bin\\git.exe" checkout main'
            }
        }
        
        stage('Build and Test') {
            steps {
                dir('Cucumber_BDD') {
                    bat 'mvn clean test'
                }
            }
        }
        
        stage('Verify Results') {
            steps {
                dir('Cucumber_BDD') {
                    bat 'if exist target\\surefire-reports (echo ✅ Tests completed successfully!) else (echo ❌ No test reports found && exit 1)'
                    echo 'Check console output for detailed test results'
                }
            }
        }
    }
    
    post {
        always {
            echo 'Pipeline execution completed'
        }
        success {
            echo '✅ Cucumber BDD pipeline finished successfully!'
        }
        failure {
            echo '❌ Pipeline failed! Check the logs for details.'
        }
    }
}
