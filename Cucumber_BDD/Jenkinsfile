pipeline {
    agent any

    environment {
        JAVA_HOME = "C:\\Program Files\\Java\\jdk-21"
        M2_HOME = "C:\\apache-maven-3.9.11-bin\\apache-maven-3.9.11"
        PATH = "${env.M2_HOME}\\bin;${env.JAVA_HOME}\\bin;${env.PATH}"
    }

    triggers {
        // Run every day at 7 AM (change as per your requirement)
        cron('0 7 * * *')
    }
    
    stages {
        stage('Checkout') {
            steps {
                // Checkout your GitHub repo
                git branch: 'main', 
                     url: 'https://github.com/Jayadeep09/Wipro_Projects.git',
                     credentialsId: '7b34b299-92ff-40d0-a5db-772315402717'
            }
        }
        
        stage('Build Project') {
            steps {
                dir('Cucumber_BDD') {
                    bat 'mvn clean install -DskipTests=true'
                }
            }
        }
        
        stage('Run Cucumber Tests') {
            steps {
                dir('Cucumber_BDD') {
                    bat 'mvn test'
                }
            }
        }
        
        stage('Test Reports') {
            steps {
                dir('Cucumber_BDD') {
                    junit 'target/surefire-reports/*.xml'
                    archiveArtifacts 'target/*.jar'
                }
            }
        }
    }
    
    post {
        always {
            echo 'Pipeline execution completed'
            cleanWs() // Clean workspace after build
        }
        success {
            echo '✅ Cucumber BDD pipeline finished successfully!'
            emailext (
                subject: "SUCCESS: ${JOB_NAME} - Build #${BUILD_NUMBER}",
                body: "The build ${BUILD_URL} completed successfully!",
                to: "jayavenkatasaijayadeep.k@gmail.com" // Replace with your email
            )
        }
        failure {
            echo '❌ Pipeline failed! Check the logs for details.'
            emailext (
                subject: "FAILED: ${JOB_NAME} - Build #${BUILD_NUMBER}",
                body: "The build ${BUILD_URL} failed. Please check Jenkins logs.",
                to: "jayavenkatasaijayadeep.k@gmail.com"// Replace with your email
            )
        }
        unstable {
            echo '⚠️  Pipeline marked as unstable'
        }
    }
}
